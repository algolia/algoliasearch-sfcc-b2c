{
    "name": "int_algolia_sfra",
    "version": "20.1.0",
    "description": "Algolia SFRA Link Cartridge",
    "scripts": {
        "test": "sgmf-scripts --test test/unit/**/*.js",
        "test:integration": "sgmf-scripts --integration 'test/integration/**/*.js'",
        "compile:scss": "sgmf-scripts --compile css",
        "compile:js": "sgmf-scripts --compile js",
        "compile:fonts": "node bin/Makefile compileFonts",
        "lint": "npm run lint:css && npm run lint:js",
        "lint:css": "sgmf-scripts --lint css",
        "lint:js": "sgmf-scripts --lint js",
        "upload": "sgmf-scripts --upload",
        "uploadCartridge": "sgmf-scripts --uploadCartridge int_algolia && sgmf-scripts --uploadCartridge int_algolia_controllers && sgmf-scripts --uploadCartridge int_algolia_sfra",
        "watch": "sgmf-scripts --watch",
        "watch:static": "sgmf-scripts --watch static"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:SalesforceCommerceCloud/link_algolia.git"
    },
    "devDependencies": {
        "chai": "^3.5.0",
        "chai-subset": "^1.6.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-dollar-sign": "~1.0.2",
        "eslint-plugin-eslint-comments": "~3.1.1",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jest": "~22.3.2",
        "eslint-plugin-jquery": "~1.5.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-promise": "~4.0.1",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^1.7.0",
        "eslint-plugin-sitegenesis": "~1.0.0",
        "eslint-plugin-you-dont-need-lodash-underscore": "~6.4.0",
        "proxyquire": "1.7.4",
        "sgmf-scripts": "^2.3.0",
        "stylelint": "^8.4.0",
        "stylelint-config-standard": "^17.0.0",
        "stylelint-scss": "^2.5.0"
    },
    "browserslist": [
        "last 2 versions",
        "ie >= 10"
    ],
    "babel": {
        "presets": [
            "env"
        ]
    },
    "packageName": "int_algolia_sfra",
    "paths": {
        "base": "../storefront-reference-architecture/cartridges/app_storefront_base/"
    }
}
