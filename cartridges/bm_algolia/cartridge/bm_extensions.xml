      <name xml:lang="x-default">Algolia</name>
      <short_description xml:lang="x-default">Configure Algolia indexing and search</short_description>
      <description xml:lang="x-default">Configure Algolia indexing and search</description>
      <exec pipeline="AlgoliaBM" node="Start"/>
      <sub-pipelines>
      	<pipeline name="AlgoliaBM-Start"/>
