      </sub-pipelines>
      <parameters>
         <parameter name="menuname" value="AlgoliaBM"/>
         <parameter name="mainmenuname" value="Configure Algolia indexing and search"/>
      </parameters>
      <icon>icons/Algolia_vector_logo.png</icon>
