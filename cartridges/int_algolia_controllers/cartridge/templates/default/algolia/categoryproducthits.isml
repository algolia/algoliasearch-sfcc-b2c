<iscontent type="text/html" charset="UTF-8" compact="true"/>
<isdecorate template="search/pt_productsearchresult_content">
	<div class="content-slot slot-grid-header">
		<isif condition="${!empty(pdict.category)}">
			<isslot id="cat-banner" context="category" description="Category Banner" context-object="${pdict.category}"/>
		<iselse/>
			<isslot id="search-result-banner" description="Promotional Search Result Banner" context="global"/>
		</isif>
	</div>

	<div class="search-result-content">
	<div id="algolia-hits-placeholder" class="search-result-items tiles-container clearfix "></div>
        <div class="row grid-header">
              <div id="algolia-searchbox-placeholder" ></div>
              <div id="algolia-stats-placeholder" class="result-count text-center col-12 col-md-9 col-sm-6 order-sm-2"></div>
              <div id="algolia-sort-by-placeholder" class="col-6 col-sm-3 order-sm-1"></div>

              <div class="col-6 col-sm-3 text-right d-md-none order-sm-3">
                  <button type="button" class="btn btn-primary filter-results col-12">
                      <isprint value="${Resource.msg('search.filter','algolia',null)}" encoding="htmlcontent" />
                  </button>
              </div>
        </div>
	</div>

</isdecorate>
